 <div id="main" class="container-fluid">
  
  <h3 class="page-header">Agregar nuevo funcionario</h3>
  
  <form action="/system/create" method="post">
    <div class="row">
      <div class="form-group col-md-1">
        <label for="ID">ID</label>
        <input type="text" class="form-control" value="<%=nextID%>" id="funcId" name="funcId">
      </div>
    <div class="form-group col-md-4">
        <label for="Nome">Nombre</label>
        <input type="text" class="form-control" id="funcName" name="funcName" placeholder="Informe o nome">
      </div>
  </div>
  
  <div class="row">
      <div class="form-group col-md-3">
        <label for="Nascimnto">Fecha Nascimiento</label>
        <input type="text" class="form-control" id="funcBirth" name="funcBirth" placeholder="Data de Nascimento. Ex: 19/06/1998">
      </div>
  </div>
  
  <div class="row">
      <div class="form-group col-md-2">
        <label for="Salario">Salario</label>
        <input type="number" class="form-control" id="funcPay" step="0.01" name="funcPay" placeholder="Informe o salário">
      </div>
  </div>
  
  <div class="row">
      <div class="form-group col-md-3">
        <label for="CPF">CPF</label>
        <input type="text" class="form-control" id="funcCPF" name="funcCPF" placeholder="CPF no formato: 000.000.000-00">
      </div>
  </div>
  
  <div class="row">
      <div class="form-group col-md-3">
        <label for="Veiculo">Vehiculo</label>
        <select name="funcVechile" class="form-control">
            <option value="Otros">Otros</option>
            <option value="bicicleta">bicicleta</option>
            <option value="Motocicleta">Motocileta</option>
            <option value="Carro">Carro</option>
        </select>
      </div>
  </div>
	<hr />
	
	<div class="row">
	  <div class="col-md-12">
	  	<button type="submit" class="btn btn-primary">Guardar</button>
		  <a href="/system" class="btn btn-default">Cancelar</a>
	  </div>
	</div>

  </form>
 </div>
 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>
</html>